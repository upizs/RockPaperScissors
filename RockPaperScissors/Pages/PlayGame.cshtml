@page
@using RockPaperScissors.Classes
@model RockPaperScissors.Pages.PlayGameModel
@{
}

<div class="text-center">
    @if (!string.IsNullOrEmpty(Model.Score))
    {
        <p>@Model.Score</p>
    }


    @if (!string.IsNullOrEmpty(Model.WhoScoreMessage))
    {
        <h3>Computer Move</h3>
        <div class="row h-100 justify-content-center align-items-center">
            <div class="card-body bg-dark col-lg-3 text-center ">
                <h5 class="text-light">@Game.Computer.Move</h5>
            </div>
        </div>
        <p>@Model.WhoScoreMessage</p>
        <div class="row h-100 justify-content-center align-items-center">
            <div class="card-body bg-dark col-lg-3 text-center">
                <h5 class="text-light">@Game.Player.Move</h5>
            </div>
        </div>
        <h3>Your Move</h3>
    }
    <p>Choose your Move</p>
    <div class="row h-100 justify-content-center align-items-center">

        @foreach (var move in Model.Moves)
        {
            <form method="post" asp-page-handler="move">
                <input type="hidden" name="playerMove" value="@move" />
                <input type="submit" value="@move" class="btn btn-dark" />
            </form>
        }
    </div>
</div>

